<div class="column col-10 col-mx-auto">
      <%= form_for @promise, html: { class: 'form-horizontal col-8' } do |f| %>
        <div class="form-group">
          <div class="col-3 col-sm-12">
            <%= f.label :promisee, class: 'form-label' %>
          </div>
          <div class="col-9 col-sm-12">
            <%= f.text_field :promisee, class: 'form-input' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-3 col-sm-12">
            <%= f.label :body, class: 'form-label' %>
          </div>
          <div class="col-9 col-sm-12">
            <%= f.text_area :body, class: 'form-input' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-3 col-sm-12">
            <%= f.label :promise_start_date, class: 'form-label' %>
          </div>
          <div class="col-9 col-sm-12">
            <%= f.date_field :promise_start_date, class: 'form-input' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-3 col-sm-12">
            <%= f.label :promise_end_date, class: 'form-label' %>
          </div>
          <div class="col-9 col-sm-12">
            <%= f.date_field :promise_end_date, class: 'form-input' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-3 col-sm-12">
            <%= f.label :status, class: 'form-label' %>
          </div>
          <div class="col-9 col-sm-12">
            <%= f.select :status, ['in progress', 'abandoned', 'done'], {}, { class: 'form-input' } %>
          </div>
        </div>

        <div class="form-group float-right">
          <div class="col-3 float-right">
            <%= f.submit %>
          </div>
        </div>
      <% end %>
    </div>
